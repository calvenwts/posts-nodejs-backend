{
  "name": "posts-nodejs-backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/app.ts",
    "staging": "NODE_ENV=staging ts-node-dev --respawn --transpile-only src/app.ts",
    "prod": "NODE_ENV=production ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start:dev": "NODE_ENV=development node dist/app.js",
    "start:staging": "NODE_ENV=staging node dist/app.js",
    "start:prod": "NODE_ENV=production node dist/app.js",
    "db:migrate:dev": "NODE_ENV=development prisma migrate dev",
    "db:migrate:staging": "NODE_ENV=staging prisma migrate deploy",
    "db:migrate:prod": "NODE_ENV=production prisma migrate deploy",
    "db:studio:dev": "NODE_ENV=development prisma studio",
    "db:studio:staging": "NODE_ENV=staging prisma studio",
    "db:studio:prod": "NODE_ENV=production prisma studio",
    "setup:dev": "NODE_ENV=development cp .env.example .env && npm run db:migrate:dev",
    "setup:staging": "NODE_ENV=staging cp .env.staging .env && npm run db:migrate:staging",
    "setup:prod": "NODE_ENV=production cp .env.production .env && npm run db:migrate:prod",
    "clean:dev": "NODE_ENV=development psql -U postgres -c 'DROP DATABASE IF EXISTS posts_db_dev;'",
    "clean:staging": "NODE_ENV=staging psql -U postgres -c 'DROP DATABASE IF EXISTS posts_db_staging;'",
    "clean:prod": "NODE_ENV=production psql -U postgres -c 'DROP DATABASE IF EXISTS posts_db_prod;'",
    "reset:dev": "npm run clean:dev && npm run setup:dev",
    "reset:staging": "npm run clean:staging && npm run setup:staging",
    "reset:prod": "npm run clean:prod && npm run setup:prod",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:format": "prisma format",
    "prisma:validate": "prisma validate",
    "db:seed:dev": "NODE_ENV=development prisma db seed",
    "db:seed:staging": "NODE_ENV=staging prisma db seed",
    "db:seed:prod": "NODE_ENV=production prisma db seed"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prom-client": "^15.1.3",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ],
    "prisma/schema.prisma": [
      "prisma format",
      "prisma validate"
    ]
  }
}
